@model List<IdealHires.DTO.Candidate.CandidateEducationDTO>
<div class="row">
    <div class="col-sm-12">
        <ul class="timeline timeline1">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <li>
                        <div class="row">
                            <div class="col-sm-6 text-left">
                                <p class="h4 col-blue text-left">@item.InstituteName </p>
                                @if (!item.IsDegreeOrCertification)
                                {
                                    <p class="ft-sml text-dark">Degree</p>
                                }
                                else
                                {
                                    <p class="ft-sml text-dark">Certificate</p>
                                }

                            </div>
                            <div class="col-sm-6 text-right ft-sml">
                                <span class="text-success mr-4">@item.StartAt to @item.EndAt</span> <span class="col-blue">@item.TotalDuration</span>
                                <a id="editEducationAnchor"><em class="fas fa-edit ml-3"></em></a><a id="deleteEducationAnchor"> <em class="fas fa-trash text-danger ml-1"></em></a>
                            </div>
                            <div class="pl-3">
                                @*<a href="#" class="float-right">21 March, 2014</a>*@
                                <p class="border-btm"></p>
                            </div>
                        </div>
                    </li>
                }

            }
            else
            {
                <li>
                    <div class="row">
                        <p class="h4 col-blue text-left">Please add Academics Details.</p>
                    </div>
                </li>
            }
        </ul>
        <div class="row">
            <div class="f1-buttons col-sm-6 text-left pl-1">
                <button class="btn btn-previous rounded-circle btn-circle-pre"><em class="fa fa-arrow-left"></em></button>
                <button type="button" class="btn btn-save btn-border ml-3" data-toggle="modal" onclick="AddEducation()"><img src="~/images/add-icon.png" class="pr-3 pb-1">Add</button>
            </div>
            <div class="f1-buttons col-sm-6 pr-1">
                <button type="button" class="btn btn-fill mr-3"><img src="~/images/save-icon.png" class="pr-2 pb-1">Save</button>
                <button class="btn btn-next rounded-circle btn-circle-next"><em class="fa fa-arrow-right"></em></button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/education/education.js" type="text/javascript"></script>