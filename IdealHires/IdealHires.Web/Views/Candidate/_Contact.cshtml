@model IdealHires.DTO.Candidate.CandidateContactDTO
@{
    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";    
    options.InsertionMode = InsertionMode.ReplaceWith;
    options.UpdateTargetId = "formContact";
}

@using (Ajax.BeginForm("Contact", "Candidate", null, options, new { @id = "formContact" }))
{
    <div class="group profile-form">
        <input class="log-user" type="text" required>
        <label>Street Address *</label>
    </div>
    <div class="group profile-form">
        <input class="log-user" type="text" required>
        <label>Address in 2nd line</label>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>City *</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>State *</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>Country *</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>Zip Code *</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>Phone Number 1*</label>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>Phone Number 2</label>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="group profile-form">
                <input class="log-user" type="text" required>
                <label>Email Id *</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="f1-buttons col-sm-6 text-left">
            <button type="button" class="btn btn-previous btn-pre-cus">Previous</button>
        </div>
        <div class="f1-buttons col-sm-6">
            <button type="button" class="btn btn-save">Save</button>
            <button type="button" class="btn btn-next">Next</button>
        </div>
    </div>

}
