@using Microsoft.AspNet.Identity
@model IdealHires.DTO.RegisterDTO
@{
    ViewBag.Title = "Candidate Register";
}
<div class="bg-sec">
    <section>
        <div class="login-bg">
            <div class="container">
                <div class="row mt-5 justify-content-center">
                    <div class="col-sm-9 align-self-center">
                        <div class="row">
                            <div class="col-md-6 wt-bg">
                                <div class="text-center">
                                    <div class="text-center pb-5 pt-4">
                                        <p class="h4 clr-h3">PROFESSIONAL STAFFING</p>
                                        <p class="h4 clr-h3">FOR CANDIDATES</p>
                                        <ul class="text-sm-left register-list m-5">
                                            <li><em class="fas fa-check-square pr-2"></em> Upload your resume</li>
                                            <li><em class="fas fa-check-square pr-2"></em> Build your resume</li>
                                            <li><em class="fas fa-check-square pr-2"></em> Search Jobs</li>
                                            <li><em class="fas fa-check-square pr-2"></em> Get Noticed</li>
                                            <li><em class="fas fa-check-square pr-2"></em> Get Hired</li>
                                        </ul>
                                    </div>
                                    <!-- <div class="abs-btm">
                                        <p class="ft-13"><a href="#"><span class="text-dark">Already a member?</span> <span class="text-danger">Sign in</span></a></p>
                                    </div> -->
                                </div>
                            </div>
                            <div class="col-md-6 bl-bg">
                                <div class="login-sec">
                                    <h3 class="col-blue text-center pt-4 pb-5">CREATE AN ACCOUNT</h3>
                                    @*<form id="form-sec">*@
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "form-sec" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.UserType)
                                        <div class="group login">
                                            <div class="md-form mb-5">
                                                <i class="fas fa-user prefix grey-text"></i>
                                                @*<input class="log-user" type="text" required>*@
                                                @*@Html.TextBoxFor(m => m.Email, new { @class = "log-user" })*@
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                @Html.LabelFor(m => m.Email)
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                @*<label>Username</label>*@
                                            </div>
                                        </div>
                                        <div id="show_hide_password" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @*<input class="log-pass" type="password" required>*@
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                @Html.LabelFor(m => m.Password)
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @*<label>Password</label>*@
                                            </div>
                                        </div>
                                        @*</form>*@
                                        @*<p class="text-center"> <button class="btn btn-blue">Register</button></p>*@
                                        
                                        <div class="my-2">
                                                <button type="submit" class="btn btn-block btn-blue waves-effect waves-light">Register</button>
                                        </div>

                                        <p class="ft-13 text-sm-right"><span class="text-dark">Already a member?</span>@Html.ActionLink(" Sign in", "Login", "Account", null, new { @class = "text-danger" })</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center col-sm-3 text-sm-right add-sm-none">
                        <a href="/" class=""><img src="~/images/advertisement.png" alt="logo" class="logo"></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


