@model List<IdealHires.DTO.Candidate.CandidateEducationDTO>

<ul class="timeline timeline1">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <li>
                <div class="row">
                    <div class="col-sm-4 text-left">
                        <p class="h4 col-blue text-left">@item.InstituteName </p>
                        @if (!item.IsDegreeOrCertification)
                        {
                            <p class="ft-sml text-dark">Degree</p>
                        }
                        else
                        {
                            <p class="ft-sml text-dark">Certificate</p>
                        }

                    </div>
                    <div class="col-sm-8 text-right ft-sml">
                        <span class="text-success mr-3">
                            @String.Format("{0:y}", @item.StartAt) to @String.Format("{0:y}", @item.EndAt)
                        </span> <span class="col-blue">@item.TotalDuration</span>

                        <span id="editEducationDiv"> <a onclick="GetPreviewEditEducation(@item.Id)"><em class="fas fa-edit ml-3"></em></a></span>
                        <span id="deleteEducationDiv"><a onclick="DeletePreviewEducation(@item.Id)"> <em class="fas fa-trash text-danger ml-1"></em></a></span>
                    </div>
                    <div class="pl-3">
                     
                        <p class="border-btm"></p>
                    </div>
                </div>
            </li>
        }

    }
    else
    {
        <li>
            <div class="row">
                <p class="h4 col-blue text-left">Please add Academics Details.</p>
            </div>
        </li>
    }
</ul>