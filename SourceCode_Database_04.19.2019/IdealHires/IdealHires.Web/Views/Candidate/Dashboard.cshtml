@model IdealHires.DTO.Candidate.Dashboard

@{
    ViewBag.Title = "Candidate Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";
}
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        datatableVariable = $('#tbldata').DataTable({
            "processing": true,
            "serverSide": true,
            "searching": false,
            "sorting": false,
            "ajax": {
                "url": "@Url.Action("CandidateDashboardDataTable", "Candidate")",
                "type": "POST",
                "datatype": "json"
            },

            'columns': [
                {
                    //'data': 'Title', 'className': 'title',
                    //"searchable": false,
                    //"sortable": false,
                    
                    'data': 'Title', 'className': 'deadline', 'render': function (Title, data, type, full, meta, Id) {
                        return '<a href="../Candidate/JobDetails/' + type.Id+'" />' + Title + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,
                },
                {
                    //'data': 'CompanyName',
                    //"searchable": false,
                    //"sortable": false,
                    'data': 'CompanyName', 'className': 'deadline', 'render': function (CompanyName, data, type, full, meta) {
                        return '<a href="../Candidate/JobDetails/' + type.Id + '" />' + CompanyName + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,
                },
                {
                    //'data': 'MinimumSalary',
                    //"searchable": false,
                    //"sortable": false,
                    'data': 'MinimumSalary', 'className': 'deadline', 'render': function (MinimumSalary, data, type, full, meta) {
                        return '<a href="../Candidate/JobDetails/' + type.Id + '" />' + MinimumSalary + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,

                },
                {
                    //'data': 'MaximumSalary',
                    //"searchable": false,
                    //"sortable": false,
                    'data': 'MaximumSalary', 'className': 'deadline', 'render': function (MaximumSalary, data, type, full, meta) {
                        return '<a href="../Candidate/JobDetails/' + type.Id + '" />' + MaximumSalary + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,
                },
                {
                    //'data': 'Positions',
                    //"searchable": false,
                    //"sortable": false,
                    'data': 'Positions', 'className': 'deadline', 'render': function (Positions, data, type, full, meta) {
                        return '<a href="../Candidate/JobDetails/' + type.Id + '" />' + Positions + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,
                },
                {
                    //'data': 'JobCategoryName',
                    //"searchable": false,
                    //"sortable": false,
                    'data': 'JobCategoryName', 'className': 'deadline', 'render': function (JobCategoryName, data, type, full, meta) {
                        return '<a href="../Candidate/JobDetails/' + type.Id + '" />' + JobCategoryName + '</a>'

                    },
                    "searchable": false,
                    "sortable": false,
                },
            ]
        });
    });
</script>
<section class="header-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Candidate Dashboard</h2>
            </div>
        </div>
    </div>
</section>
<section class="mt-5">
    <div class="mb-3">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                    <div class="row">
                        <div class="col-sm-6 col-lg-6 col-xl-3">
                            <div class="card shadow text-center">
                                <div class="card-body">
                                    <div class="mx-auto server">
                                        <i class="fas fa-envelope icon text-success h4"></i>
                                    </div>
                                    <div class="text mt-2">
                                        <h1 class="mb-0">@Model.TotalRecommendedJobs</h1>
                                        <label class="text-muted">Recommended Jobs</label>
                                    </div>
                                    <div class="options mt-3">

                                        <a href="@Url.Action("Jobs","Candidate")" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-search"></i> View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 col-xl-3">
                            <div class="card shadow text-center">
                                <div class="card-body">
                                    <div class="mx-auto server">
                                        <i class="fas fa-clipboard-list icon text-info h4"></i>
                                    </div>
                                    <div class="text mt-2">
                                        <h1 class="mb-0">@Model.TotalAppliedJobs</h1>
                                        <label class="text-muted">Applied Jobs</label>
                                    </div>
                                    <div class="options mt-3">
                                        <a href="@Url.Action("GetAppliedJobs","Candidate")" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-search"></i> View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 col-xl-3">
                            <div class="card shadow text-center">
                                <div class="card-body">
                                    <div class="mx-auto server">
                                        <i class="fas fa-clipboard-list icon text-info h4"></i>
                                    </div>
                                    <div class="text mt-2">
                                        <h1 class="mb-0">@Model.TotalSavedJobs</h1>
                                        <label class="text-muted">Saved Jobs</label>
                                    </div>
                                    <div class="options mt-3">
                                        <a href="@Url.Action("GetSavedJobs","Candidate")" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-search"></i> View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 col-lg-6 col-xl-3" style="display:none;">
                            <div class="card shadow text-center">
                                <div class="card-body">
                                    <div class="mx-auto server">
                                        <i class="fas fa-envelope icon text-success h4"></i>
                                    </div>
                                    <div class="text mt-2">
                                        <h1 class="mb-0">@Model.TotalCallForInterviewJobs</h1>
                                        <label class="text-muted">Call for Interview</label>
                                    </div>
                                    <div class="options mt-3">

                                        <a href="@Url.Action("CallForInterview","Candidate",new { type="sortlistedcandidate"})" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-search"></i> View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-lg-6 col-xl-3">
                            <div class="card shadow text-center">
                                <div class="card-body">
                                    <div class="mx-auto server">
                                        <i class="fas fa-eye icon text-danger h4"></i>
                                    </div>
                                    <div class="text mt-2">
                                        <h1 class="mb-0">@Model.TotalNotInterestedJobs</h1>
                                        <label class="text-muted">Not Interested Jobs</label>
                                    </div>
                                    <div class="options mt-3">
                                        <a href="@Url.Action("GetNotInterestedJobs","Candidate")" class="btn btn-danger btn-sm">
                                            <i class="glyphicon glyphicon-search"></i>
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-5">
                        
                        <div class="col-md-12">
                            <div class="card p-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div><h5>Recent Jobs</h5></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="recent-job-container">
                                            <table class="table tbody-spc tbody" id="tbldata">
                                                <thead>
                                                    <tr>
                                                        <th>Job Title</th>
                                                        <th>Company Name</th>
                                                        <th>Minimum Salary</th>
                                                        <th>Maximum Salary</th>
                                                        <th>Positions</th>
                                                        <th>Job Category Name</th>                                                       
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center col-sm-2 text-sm-right add-sm-none"> <a href="/" class=""><img src="~/images/advertisement.png" alt="logo" class="logo"></a> </div>
            </div>
        </div>
    </div>
</section>