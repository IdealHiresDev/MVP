@model IdealHires.DTO.Candidate.CandidateJobExploreDTO
@{
    if (Model.AvailableJobs != null)
    {
        foreach (var item in Model.AvailableJobs)
        {
            <div class="card listWrpService mb-4">
                <div class="row">
                    <div class="col-lg-3 col-xs-12 float-left"><img class="img-responsive" src="~/images/demo-logo4.png"></div>
                    <div class="col-lg-9 col-xs-12 float-right">
                        <p class="h5">
                            <a>
                                @item.Title
                            </a>
                        </p>
                        <p class="ft-sml mb-0">
                            $ @string.Format("{0:#.00}", Convert.ToDecimal(item.MinimumSalary))
                            - $ @string.Format("{0:#.00}", Convert.ToDecimal(item.MaximumSalary))
                        </p>
                        <ul class="featureInfo innerfeat pl-0">
                            <li>
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                @item.LocationCity @item.LocationState @item.LocationCountry
                                Atlanta, GA
                            </li>
                            <li><i class="fa fa-calendar" aria-hidden="true"></i> Dec 30, 2015 </li>
                            <li>
                                @item.JobTypeName
                            </li>
                        </ul>
                        <p>
                            @item.Description
                        </p>
                        @*<button type="button" class="btn btn-success btn-sm float-right">View Details</button>*@
                        @Html.ActionLink("View Details", "JobDetails", new { id = item.Id }, new { @class = "btn btn-primary btn-next" })
                    </div>
                </div>
            </div>
        }
    }
}