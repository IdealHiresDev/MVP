            <div class="row">
                <div class="col-sm-6">
                    @*<input id="name" type="text" placeholder="Location *" class="tab-cus-input">*@
                    @Html.TextBoxFor(m => m.JobLocation, new { @class = "tab-cus-input", placeholder = "Location *" })
                </div>
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.JobLocation, new { @class = "tab-cus-input", placeholder = "Company *" })
                    @*<input id="name" type="text" placeholder="Company" alt="Category" class="tab-cus-input">*@
                </div>
            </div>
        </div>
        <div class="row pb-3">
            <div class="col-sm-12 text-right">
                <button type="button" class="btn btn-save btn-fill pl-4 pr-4"><em class="fa fa-search pr-2"></em> Search</button>
