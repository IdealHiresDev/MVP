@model IdealHires.DTO.PaymentDTO
@{
    Layout = null;
    ViewBag.Title = "AuthorizePayment";
}
@{
    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";
    options.OnSuccess = "PaymentSuccess";
    options.InsertionMode = InsertionMode.ReplaceWith;
}

<html>
<head>
    <title>
        AuthorizePayment
    </title>
    <style type="text/css">
        .sap_tabs {
            clear: both;
            padding: 0em 0 0em;
        }

        .payment-info h3 {
            font-size: 26px;
            text-align: center;
            margin-bottom: 15px;
            color: #3AD5A0;
            font-weight: 500;
            font-family: 'Alegreya Sans', sans-serif;
        }

        .resp-tabs-container {
            padding: 0px;
            clear: left;
            padding: 2em 2.5em;
            background: #fff;
            border: 1px solid #e7ebee;
        }

        .user-form ul li {
            list-style-type: none;
            display: inline-block;
            width: 23%;
            margin-right: 9%;
        }

        li {
            display: list-item;
            text-align: -webkit-match-parent;
        }

        input.text_box {
            background: #fcfcfc;
            border: 1px solid #ebeced;
        }
    </style>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        function PaymentSuccess(data) {

        }
    </script>
</head>
<body>
    <div class="container sap_tabs">
        @using (Ajax.BeginForm("AuthorizePayment", "Employer", null, options, new { @id = "formPayment" }))
        {
            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <div class="resp-tabs-container">
                    <div class="row">
                        <div class="col-sm-12 payment-info">
                            <h3> Personal Information</h3>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="FirstName"> First Name</label></h5>
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="LastName"> Last Name</label></h5>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="EmailAddress"> Email Address</label></h5>
                                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @type = "email" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="Address"> Address</label></h5>
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="State"> State</label></h5>
                                @Html.TextBoxFor(m => m.StateName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <h5><label for="Address"> Zip</label></h5>
                                @Html.EditorFor(m => m.Zip, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 payment-info">
                            <h3> Credit Card Info</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <h5><label for="NameOnCard"> Name On Card</label></h5>
                                @Html.TextBoxFor(m => m.NameOnCard, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <h5><label for="CardNumber"> Card Number</label></h5>
                                @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group user-form">
                                <h5><label for="Expiration"> Expiration</label></h5>
                                <ul>
                                    <li>
                                        @Html.EditorFor(m => m.ExpirationMonth, new { @class = "form-control" })
                                    </li>
                                    <li>
                                        @Html.EditorFor(m => m.ExpirationYear, new { @class = "form-control" })
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <h5><label for="CVVNumber"> CVV Number</label></h5>
                                @Html.EditorFor(m => m.CVVNumber, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <h5><label for="Description"> Description</label></h5>
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>