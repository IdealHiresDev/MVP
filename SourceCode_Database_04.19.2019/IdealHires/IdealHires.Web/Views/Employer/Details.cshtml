@model IdealHires.DTO.Employer.EUserDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "POST";
}



<section class="header-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center-xs">
                <h2>User Details</h2>
            </div>
        </div>
    </div>
</section>
<section class="mt-5">
    <div class="mb-3">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-10 order-1 order-sm-1">
                    <div class="pt-1">
                        <div class="card rounded-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="d-flex flex-row">
                                        <div class="col-lg-3 col-4 float-left pl-3 pr-3 mb-3">
                                            <a><img class="img-fluid job-detail-company-img" src="~/images/employer-detail-logo.png" class="job-detail-company-img"></a>
                                        </div>
                                        <div class="col-lg-9 col-8">
                                            <p class="h3 blue-clr text-left h4-d-sm mb-1">@Model.FirstName @Model.LastName</p>
                                            <p class="h5 text-dark text-left h4-d-sm mt-2">Your future starts here</p>
                                            <div class="row">
                                                <div class="col-md-5 col-12">
                                                    <span class="fnt-13 mb-0">
                                                        <i class="fas fa-check pr-1"></i>
                                                        <p class="fnt-13 pad-20">
                                                            @Model.Address1
                                                            @Model.Address2
                                                        </p>


                                                    </span>

                                                </div>
                                                <div class="col-md-3">
                                                    <p class="fnt-13"><i class="fas fa-mobile-alt"></i> @Model.Phone1</p>
                                                </div>
                                                <div class="col-md-4">
                                                    <p class="fnt-13"><i class="fas fa-envelope"></i> @Model.Email</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row mt-4">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <h2 class="detail-title">About Company</h2>
                                        </div>
                                        <p>
                                            @Model.Description
                                        </p>

                                    </div>
                                </div>
                                <a href="@Url.Action("Users","EmployeeUser")" class="btn btn-block-cus blue-theme-button waves-effect waves-light">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center-cus col-12 col-lg-2 order-3">
                    <a href="/"><img class="img-fluid" src="~/images/advertisement.png" alt="logo" class="logo"></a>
                </div>


            </div>
        </div>
    </div>
</section>
<!-- The Modal -->
<!--JavaScript-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/multiselect-drop.js"></script>
<script src="js/mdb.min.js"></script>
<script src="js/scripts.js"></script>
<script src="js/updated-cus.js"></script>

