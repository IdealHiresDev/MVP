@using IdealHires.DTO
@model LoginDTO
@{
    ViewBag.Title = "Login";
}
<div class="bg-sec">
    <section>
        <div class="login-bg">
            <div class="container">
                <div class="row mt-5 justify-content-center">
                    <div class="col-sm-9 align-self-center">
                        <div class="row">
                            <div class="col-md-6 wt-bg">
                                <div class="text-center">
                                    <div class="text-center pb-4 pt-4">
                                        <p class="h4 clr-h3">
                                            <label id="lblHeader" name="lblHeader"></label>
                                        @*Your Ideal Candidates Await*@
                                        </p>
                                        @*<p class="h4 clr-h3">&</p>
                                        <p class="h4 clr-h3 pb-4">JOB SOLUTIONS</p>
                                        <p class="col-grey ft-14 lttr-spc2 pd-10">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's.</p>*@
                                    </div>
                                    <div class="abs-btm">
                                        <p class="ft-13">
                                            <span class="text-dark">Not a Member Yet?</span>
                                            @if (Model.UserType == "Employer")
                                            {
                                                @Html.ActionLink(" Register Now", "EmployerRegister", "Account", null, new { @class = "text-danger" })
                                            }
                                            else
                                            {
                                                @Html.ActionLink(" Register Now", "Register", "Account", null, new { @class = "text-danger" })
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 bl-bg">
                                <div class="login-sec">
                                    <h3 class="col-blue text-center pt-4 pb-5">SIGN IN</h3>
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "form-sec" }))
                                    {
                                        @Html.HiddenFor(m => m.UserType)
                                        @Html.HiddenFor(m => m.ReturnUrl)
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="group login">
                                            <div class="md-form mb-5">
                                                <i class="fas fa-user prefix grey-text"></i>
                                                @Html.TextBoxFor(m => m.Email, "", new { id = "Email", @class = "form-control" })
                                                <label for="Email"></label>
                                                @Html.LabelFor(m => m.Email)
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div id="show_hide_password" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @Html.PasswordFor(m => m.Password, new { id = "Pwd", @class = "form-control" })
                                                <label for="Pwd"></label>
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @Html.LabelFor(m => m.Password)
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="float-left">
                                                    <div class="custom-control custom-checkbox remember">
                                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                                                        @*@Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label forg ft-13" })*@
                                                        @*<input type="checkbox" class="custom-control-input" id="customCheck" name="example1">*@
                                                        <label class="custom-control-label" for="customCheck"><a href="#" class="forg ft-13">Remember Me</a></label>
                                                    </div>
                                                </div>
                                                @*<div class="text-center login-btn float-right">

                    </div>*@
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-md-12 text-center login-btn">
                                                <input type="submit" value="Login" class="btn btn-block btn-blue waves-effect waves-light" />
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-md-12 text-right">
                                                @Html.ActionLink("Forgot Password?", "ForgotPassword", null, new { @class = "forg ft-13" })
                                            </div>
                                        </div>
                                        }
                                    </div>
                                </div>
                                </div>
                    </div>
                    <div class="text-center col-sm-3 text-sm-right">
                        <a href="/" class=""><img src="~/images/advertisement.png" alt="logo" class="logo"></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var currentUrl = window.location.href;
        if (currentUrl.indexOf("EmployerLogin") != -1) {
           
            $("#lblHeader").text("Your Ideal Candidates Await");
        }
        else {
            $("#lblHeader").text("Your Ideal Career Awaits");
        } 
    });
</script>