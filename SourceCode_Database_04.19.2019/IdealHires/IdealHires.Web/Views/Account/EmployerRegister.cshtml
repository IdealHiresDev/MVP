@model IdealHires.DTO.RegisterDTO
@{
    ViewBag.Title = "Employer Register";
}
<div class="bg-sec">
    <section>
        <div class="login-bg mt-5 mb-3">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-sm-9 align-self-center">
                        <div class="row">
                            <div class="col-md-6 wt-bg">
                                <div class="text-center">
                                    <div class="text-center pb-5 pt-4">
                                        <p class="h4 clr-h3">Qualified Candidates Delivered </p>
                                        @*<p class="h4 clr-h3">PERFECT EMPLOYEE</p>*@
                                        <ul class="text-sm-left register-list m-5">
                                            @*<li><em class="fas fa-check-square pr-2"></em> Post Jobs</li>
                                                <li><em class="fas fa-check-square pr-2"></em> Find Employees</li>
                                                <li><em class="fas fa-check-square pr-2"></em> Hire Fast</li>*@
                                            <li><em class="fas fa-check-square pr-2"></em>IdealHires cuts through the noise by marketing your position locally, searching our extensive database, and finding the IdealCandidate. </li>
                                            <li><em class="fas fa-check-square pr-2"></em> Then we take it a step further. </li>
                                            <li><em class="fas fa-check-square pr-2"></em>We contact them on your behalf so the candidates you see in your personalized dashboard are qualified and primed for your position, saving you time and effort. </li>
                                            <li class="ft-13 text-sm-left"><span class="text-dark">Already a Member</span>@Html.ActionLink(" Sign in", "EmployerLogin", "Account", null, new { @class = "text-danger" })</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 bl-bg">
                                <div class="login-sec">
                                    <h3 class="col-blue text-center pt-4 pb-5">CREATE AN ACCOUNT</h3>
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "form-sec" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-validationdanger" })
                                        @Html.HiddenFor(model => model.UserType)
                                        <div class="group login">
                                            <div class="md-form mb-5">
                                                <i class="fas fa-user prefix grey-text"></i>
                                                @*<input class="log-user" type="text" required>*@
                                                @Html.TextBoxFor(m => m.Email, "", new { id = "Email", @class = "form-control" })
                                                <label for="Email"></label>
                                                @Html.LabelFor(m => m.Email)
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                @*<label>Username</label>*@
                                            </div>
                                        </div>
                                        <div id="show_hide_password" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @*<input class="log-pass" type="password" required>*@
                                                @Html.PasswordFor(m => m.Password, new { id = "Pwd", @class = "form-control" })
                                                <label for="Pwd"></label>
                                                @Html.LabelFor(m => m.Password)
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @*<label>Password</label>*@
                                            </div>
                                        </div>
                                        <div id="show_hide_confirmpassword" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { id = "CPwd", @class = "form-control" })
                                                <label for="CPwd"></label>
                                                @Html.LabelFor(m => m.ConfirmPassword)
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <p class="text-center"><button class="btn btn-block btn-blue waves-effect waves-light">Register</button></p>
                                        @*<p class="ft-13 text-sm-right"><span class="text-dark">Already a member?</span>@Html.ActionLink(" Sign in", "EmployerLogin", "Account", null, new { @class = "text-danger" })</p>*@
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center col-sm-3 text-sm-right add-sm-none"> <a href="/" class=""><img src="~/images/advertisement.png" alt="logo" class="logo"></a> </div>
                </div>
            </div>
        </div>
    </section>
</div>

