@model IdealHires.DTO.ResetPasswordDTO
@{
    ViewBag.Title = "Reset password";
}
<div class="bg-sec">
    <section>
        <div class="login-bg">
            <div class="container">
                <div class="row mt-5 justify-content-center">
                    <div class="col-sm-9 align-self-center">
                        <div class="row">
                            <div class="col-md-6 wt-bg">
                                <div class="text-center">
                                    <div class="text-center pb-4 pt-4">
                                        <p class="h4 clr-h3">PROFESSIONAL STAFFING</p>
                                        <p class="h4 clr-h3">&</p>
                                        <p class="h4 clr-h3 pb-4">JOB SOLUTIONS</p>
                                        <p class="col-grey ft-14 lttr-spc2 pd-10">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's.</p>
                                    </div>
                                    <div class="abs-btm">
                                        <p class="ft-13"><a href="#"><span class="text-dark">Not a member yet?</span> <span class="text-danger">Register now</span></a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 bl-bg">
                                <div class="login-sec">
                                    <h3 class="col-blue text-center pt-4 pb-5">RESET PASSWORD</h3>
                                    @*<form id="form-sec">*@
                                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { id = "form-sec" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-validationdanger" })
                                        @Html.HiddenFor(model => model.Code)
                                        @Html.HiddenFor(model => model.Id)
                                        <div id="show_hide_password" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @Html.PasswordFor(m => m.Password, new { id = "Pwd", @class = "form-control" })
                                                <label for="Pwd">Password</label>
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-validationdanger" })
                                            </div>
                                        </div>
                                        <div id="show_hide_password" class="group login">
                                            <div class="md-form mb-5">
                                                <div class="pwd-show-hide">
                                                    <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                                </div>
                                                <i class="fas fa-unlock-alt prefix grey-text"></i>
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { id = "CPwd", @class = "form-control" })
                                                <label for="CPwd">Confirm Password</label>
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-validationdanger" })
                                            </div>
                                        </div>
                                        <p class="text-center"> <button type="submit" class="btn btn-blue">Reset Password</button></p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center col-sm-3 text-sm-right add-sm-none">
                        <a href="/" class=""><img src="~/images/advertisement.png" alt="logo" class="logo"></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


